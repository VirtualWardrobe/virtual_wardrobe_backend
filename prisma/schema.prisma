generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  fname    String?
  lname    String?
  email    String  @unique
  username String  @unique
  password String
  items    Item[]
}

model Item {
  id       String  @id @default(uuid())
  category String
  type     String
  brand    String
  size     String
  color    String
  image    String?
  userId   String
  user     User    @relation(fields: [userId], references: [id])
}

model Contact {
  id      String   @id @default(uuid())
  name    String?
  email   String
  message String
}
